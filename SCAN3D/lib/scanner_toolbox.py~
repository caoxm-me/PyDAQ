def kwargs_update(default,**kwargs):
    """
    """
    k = default.copy()
    for key,val in kwargs.iteritems():
        k[key] = val
        
    return k

def Make_Me_Iterable(A):
    """
    """
    if hasattr(A, '__iter__'):
        return A
    return [A]
